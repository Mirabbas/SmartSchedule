<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/theme_color">

    <TextView
        android:id="@+id/number_lh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white">
    </TextView>

    <ImageView
        android:id="@+id/icon_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_dashboard_white_24dp" >
    </ImageView>

    <ImageView
        android:id="@+id/icon_computer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_computer_white_24dp" >
    </ImageView>

    <ImageView
        android:id="@+id/icon_projector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_camera_roll_white_24dp" >
    </ImageView>

</LinearLayout>